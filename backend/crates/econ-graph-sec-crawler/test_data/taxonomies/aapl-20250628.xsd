<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns:aapl="http://www.apple.com/20250628"
            xmlns:dei="http://xbrl.sec.gov/dei/2024"
            xmlns:us-gaap="http://fasb.org/us-gaap/2024"
            xmlns:srt="http://fasb.org/srt/2024"
            xmlns:link="http://www.xbrl.org/2003/linkbase"
            xmlns:xlink="http://www.w3.org/1999/xlink"
            xmlns:xbrli="http://www.xbrl.org/2003/instance"
            targetNamespace="http://www.apple.com/20250628"
            elementFormDefault="qualified"
            attributeFormDefault="unqualified">

  <xsd:import namespace="http://www.xbrl.org/2003/instance"
              schemaLocation="xbrl-instance-2003-12-31.xsd"/>
  <xsd:import namespace="http://xbrl.sec.gov/dei/2024"
              schemaLocation="dei-2024.xsd"/>
  <xsd:import namespace="http://fasb.org/us-gaap/2024"
              schemaLocation="us-gaap-2024.xsd"/>
  <xsd:import namespace="http://fasb.org/srt/2024"
              schemaLocation="srt-2024.xsd"/>

  <!-- Apple-specific concepts -->
  <xsd:element name="RevenueFromServices" id="aapl_RevenueFromServices"
               type="xbrli:monetaryItemType" substitutionGroup="xbrli:item"
               xbrli:periodType="duration" nillable="true"
               abstract="false">
    <xsd:annotation>
      <xsd:documentation>Revenue from services including App Store, iCloud, Apple Music, etc.</xsd:documentation>
    </xsd:annotation>
  </xsd:element>

  <xsd:element name="RevenueFromProducts" id="aapl_RevenueFromProducts"
               type="xbrli:monetaryItemType" substitutionGroup="xbrli:item"
               xbrli:periodType="duration" nillable="true"
               abstract="false">
    <xsd:annotation>
      <xsd:documentation>Revenue from hardware products including iPhone, iPad, Mac, etc.</xsd:documentation>
    </xsd:annotation>
  </xsd:element>

  <xsd:element name="iPhoneUnitsSold" id="aapl_iPhoneUnitsSold"
               type="xbrli:decimalItemType" substitutionGroup="xbrli:item"
               xbrli:periodType="duration" nillable="true"
               abstract="false">
    <xsd:annotation>
      <xsd:documentation>Number of iPhone units sold during the period</xsd:documentation>
    </xsd:annotation>
  </xsd:element>

  <xsd:element name="ActiveDeviceInstalledBase" id="aapl_ActiveDeviceInstalledBase"
               type="xbrli:decimalItemType" substitutionGroup="xbrli:item"
               xbrli:periodType="instant" nillable="true"
               abstract="false">
    <xsd:annotation>
      <xsd:documentation>Total number of active devices in the installed base</xsd:documentation>
    </xsd:annotation>
  </xsd:element>

  <xsd:element name="ServicesGrossMargin" id="aapl_ServicesGrossMargin"
               type="xbrli:monetaryItemType" substitutionGroup="xbrli:item"
               xbrli:periodType="duration" nillable="true"
               abstract="false">
    <xsd:annotation>
      <xsd:documentation>Gross margin from services business</xsd:documentation>
    </xsd:annotation>
  </xsd:element>

</xsd:schema>
