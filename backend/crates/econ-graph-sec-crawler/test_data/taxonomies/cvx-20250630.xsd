<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns:cvx="http://www.chevron.com/20250630"
            xmlns:dei="http://xbrl.sec.gov/dei/2024"
            xmlns:us-gaap="http://fasb.org/us-gaap/2024"
            xmlns:srt="http://fasb.org/srt/2024"
            xmlns:link="http://www.xbrl.org/2003/linkbase"
            xmlns:xlink="http://www.w3.org/1999/xlink"
            xmlns:xbrli="http://www.xbrl.org/2003/instance"
            targetNamespace="http://www.chevron.com/20250630"
            elementFormDefault="qualified"
            attributeFormDefault="unqualified">

  <xsd:import namespace="http://www.xbrl.org/2003/instance"
              schemaLocation="xbrl-instance-2003-12-31.xsd"/>
  <xsd:import namespace="http://xbrl.sec.gov/dei/2024"
              schemaLocation="dei-2024.xsd"/>
  <xsd:import namespace="http://fasb.org/us-gaap/2024"
              schemaLocation="us-gaap-2024.xsd"/>
  <xsd:import namespace="http://fasb.org/srt/2024"
              schemaLocation="srt-2024.xsd"/>

  <!-- Chevron-specific concepts -->
  <xsd:element name="UpstreamRevenue" id="cvx_UpstreamRevenue"
               type="xbrli:monetaryItemType" substitutionGroup="xbrli:item"
               xbrli:periodType="duration" nillable="true"
               abstract="false">
    <xsd:annotation>
      <xsd:documentation>Revenue from upstream oil and gas exploration and production</xsd:documentation>
    </xsd:annotation>
  </xsd:element>

  <xsd:element name="DownstreamRevenue" id="cvx_DownstreamRevenue"
               type="xbrli:monetaryItemType" substitutionGroup="xbrli:item"
               xbrli:periodType="duration" nillable="true"
               abstract="false">
    <xsd:annotation>
      <xsd:documentation>Revenue from downstream refining and marketing operations</xsd:documentation>
    </xsd:annotation>
  </xsd:element>

  <xsd:element name="OilProductionBarrels" id="cvx_OilProductionBarrels"
               type="xbrli:decimalItemType" substitutionGroup="xbrli:item"
               xbrli:periodType="duration" nillable="true"
               abstract="false">
    <xsd:annotation>
      <xsd:documentation>Total oil production in barrels during the period</xsd:documentation>
    </xsd:annotation>
  </xsd:element>

  <xsd:element name="GasProductionCubicFeet" id="cvx_GasProductionCubicFeet"
               type="xbrli:decimalItemType" substitutionGroup="xbrli:item"
               xbrli:periodType="duration" nillable="true"
               abstract="false">
    <xsd:annotation>
      <xsd:documentation>Total natural gas production in cubic feet during the period</xsd:documentation>
    </xsd:annotation>
  </xsd:element>

  <xsd:element name="RefiningMargin" id="cvx_RefiningMargin"
               type="xbrli:monetaryItemType" substitutionGroup="xbrli:item"
               xbrli:periodType="duration" nillable="true"
               abstract="false">
    <xsd:annotation>
      <xsd:documentation>Refining margin from downstream operations</xsd:documentation>
    </xsd:annotation>
  </xsd:element>

</xsd:schema>
