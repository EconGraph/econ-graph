{
  "dashboard": {
    "id": null,
    "uid": "econgraph-overview",
    "title": "EconGraph Platform Overview",
    "description": "High-level overview of the EconGraph platform performance and health",
    "tags": ["econgraph", "overview", "platform"],
    "timezone": "browser",
    "schemaVersion": 37,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Status",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "displayMode": "basic",
              "orientation": "horizontal"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 0.5 },
                { "color": "green", "value": 0.8 }
              ]
            },
            "unit": "percent"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "targets": [
          {
            "expr": "avg(up{job=~\"econgraph-.*\"})",
            "legendFormat": "Service Uptime",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "API Request Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 9, "x": 6, "y": 0 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": { "type": "linear" },
              "showPoints": "never",
              "spanNulls": false,
              "stacking": { "group": "A", "mode": "none" },
              "thresholdsStyle": { "mode": "off" }
            },
            "unit": "reqps"
          }
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": { "mode": "single", "sort": "none" }
        },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"econgraph-backend\"}[5m]))",
            "legendFormat": "Total Requests/sec",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{job=\"econgraph-backend\", code=~\"2..\"}[5m]))",
            "legendFormat": "Success (2xx)",
            "refId": "B"
          },
          {
            "expr": "sum(rate(http_requests_total{job=\"econgraph-backend\", code=~\"4..\"}[5m]))",
            "legendFormat": "Client Error (4xx)",
            "refId": "C"
          },
          {
            "expr": "sum(rate(http_requests_total{job=\"econgraph-backend\", code=~\"5..\"}[5m]))",
            "legendFormat": "Server Error (5xx)",
            "refId": "D"
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time Percentiles",
        "type": "graph",
        "gridPos": { "h": 8, "w": 9, "x": 15, "y": 0 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": { "type": "linear" },
              "showPoints": "never",
              "spanNulls": false,
              "stacking": { "group": "A", "mode": "none" },
              "thresholdsStyle": { "mode": "off" }
            },
            "unit": "s"
          }
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": { "mode": "single", "sort": "none" }
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"econgraph-backend\"}[5m])) by (le))",
            "legendFormat": "50th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"econgraph-backend\"}[5m])) by (le))",
            "legendFormat": "95th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"econgraph-backend\"}[5m])) by (le))",
            "legendFormat": "99th percentile",
            "refId": "C"
          }
        ]
      },
      {
        "id": 4,
        "title": "Active Pods",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "green", "value": 2 }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "targets": [
          {
            "expr": "sum(up{job=\"econgraph-backend\"})",
            "legendFormat": "Backend",
            "refId": "A"
          },
          {
            "expr": "sum(up{job=\"econgraph-frontend\"})",
            "legendFormat": "Frontend",
            "refId": "B"
          },
          {
            "expr": "sum(up{job=\"econgraph-crawler\"})",
            "legendFormat": "Crawler",
            "refId": "C"
          }
        ]
      },
      {
        "id": 5,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": { "h": 8, "w": 9, "x": 6, "y": 8 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": { "type": "linear" },
              "showPoints": "never",
              "spanNulls": false,
              "stacking": { "group": "A", "mode": "none" },
              "thresholdsStyle": { "mode": "off" }
            },
            "unit": "short"
          }
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": { "mode": "single", "sort": "none" }
        },
        "targets": [
          {
            "expr": "sum(pg_stat_activity_count{datname=\"econ_graph\"})",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "sum(pg_settings_max_connections)",
            "legendFormat": "Max Connections",
            "refId": "B"
          }
        ]
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "h": 8, "w": 9, "x": 15, "y": 8 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": { "type": "linear" },
              "showPoints": "never",
              "spanNulls": false,
              "stacking": { "group": "A", "mode": "none" },
              "thresholdsStyle": { "mode": "off" }
            },
            "unit": "bytes"
          }
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": { "mode": "single", "sort": "none" }
        },
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{pod=~\"econgraph-backend-.*\"})",
            "legendFormat": "Backend Memory",
            "refId": "A"
          },
          {
            "expr": "sum(container_memory_usage_bytes{pod=~\"econgraph-frontend-.*\"})",
            "legendFormat": "Frontend Memory",
            "refId": "B"
          },
          {
            "expr": "sum(container_memory_usage_bytes{pod=~\"econgraph-crawler-.*\"})",
            "legendFormat": "Crawler Memory",
            "refId": "C"
          },
          {
            "expr": "sum(container_memory_usage_bytes{pod=~\"postgresql-.*\"})",
            "legendFormat": "Database Memory",
            "refId": "D"
          }
        ]
      },
      {
        "id": 7,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": { "type": "linear" },
              "showPoints": "never",
              "spanNulls": false,
              "stacking": { "group": "A", "mode": "none" },
              "thresholdsStyle": { "mode": "off" }
            },
            "unit": "percent"
          }
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": { "mode": "single", "sort": "none" }
        },
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"econgraph-backend-.*\"}[5m])) * 100",
            "legendFormat": "Backend CPU %",
            "refId": "A"
          },
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"econgraph-frontend-.*\"}[5m])) * 100",
            "legendFormat": "Frontend CPU %",
            "refId": "B"
          },
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"econgraph-crawler-.*\"}[5m])) * 100",
            "legendFormat": "Crawler CPU %",
            "refId": "C"
          },
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"postgresql-.*\"}[5m])) * 100",
            "legendFormat": "Database CPU %",
            "refId": "D"
          }
        ]
      },
      {
        "id": 8,
        "title": "Network I/O",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": { "type": "linear" },
              "showPoints": "never",
              "spanNulls": false,
              "stacking": { "group": "A", "mode": "none" },
              "thresholdsStyle": { "mode": "off" }
            },
            "unit": "Bps"
          }
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": { "mode": "single", "sort": "none" }
        },
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total{pod=~\"econgraph-.*\"}[5m]))",
            "legendFormat": "Inbound Traffic",
            "refId": "A"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total{pod=~\"econgraph-.*\"}[5m]))",
            "legendFormat": "Outbound Traffic",
            "refId": "B"
          }
        ]
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    }
  }
}
