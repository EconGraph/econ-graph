{
  "title": "Crawler Politeness",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "tags": ["crawler", "politeness"],
  "templating": {
    "list": [
      {
        "name": "source",
        "type": "query",
        "datasource": null,
        "refresh": 2,
        "query": "label_values(econgraph_crawler_requests_total, source)",
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Request Delays",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {"expr": "histogram_quantile(0.95, sum(rate(econgraph_crawler_request_delays_seconds_bucket{source=~\"$source\"}[10m])) by (le))", "legendFormat": "p95 delay"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Rate Limit Hits",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {"expr": "sum by (source) (rate(econgraph_crawler_rate_limit_hits_total{source=~\"$source\"}[15m]))", "legendFormat": "{{source}}"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Retries & Timeouts",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
      "targets": [
        {"expr": "sum by (source) (rate(econgraph_crawler_retries_total{source=~\"$source\"}[15m]))", "legendFormat": "retries: {{source}}"},
        {"expr": "sum by (source) (rate(econgraph_crawler_timeouts_total{source=~\"$source\"}[15m]))", "legendFormat": "timeouts: {{source}}"}
      ]
    }
  ]
}
